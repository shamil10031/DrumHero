<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    android:orientation="horizontal"
    tools:context="${relativePackage}.${activityClass}" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnBrowseFile"
        android:fillViewport="true">

        <TextView
            android:id="@+id/notesTextView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:onClick="onConstructorText"
            android:text="Here wil be your code"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp" />
    </ScrollView>

    <Button
        android:id="@+id/btnBrowseFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onBrowseFile"
        android:text="BrowseFile" />

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onConvert"
        android:text="Convert" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="onMainM"
        android:text="Main menu" />

</RelativeLayout>