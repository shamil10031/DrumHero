<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    tools:context="${relativePackage}.${activityClass}" >

    <com.ShomazzApp.drumhero.utils.MySurfaceView
        android:id="@+id/mySurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/pauseView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#DD333333"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/btnGameEnded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnMainMenu"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:text="End Game"
            android:textColor="#FFFFFFFF"
            android:textSize="40dip" />

        <Button
            android:id="@+id/btnMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:text="Main menu"
            android:textColor="#FFFFFFFF"
            android:textSize="40dip" />

        <Button
            android:id="@+id/btnNewSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnMainMenu"
            android:background="#00000000"
            android:layout_centerHorizontal="true"
            android:text="New Song"
            android:textColor="#FFFFFFFF"
            android:textSize="40dip" />

        <Button
            android:id="@+id/btnResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnNewSong"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:text="Resume"
            android:textColor="#FFFFFFFF"
            android:textSize="40dip" />

    </RelativeLayout>

</RelativeLayout>