<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ShomazzApp.drumhero">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/dh"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/AnimationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SongsActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/AnimationActivity" />
        <activity
            android:name=".GameActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_game"
            android:screenOrientation="landscape"
            android:theme="@style/AnimationActivity" />
        <activity
            android:name=".WebActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_web"
            android:screenOrientation="landscape"
            android:theme="@style/AnimationActivity" />
        <activity
            android:name=".GameEndedActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_game_ended"
            android:screenOrientation="landscape"
            android:theme="@style/AnimationActivity" />
        <activity
            android:name=".ConstructorActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_constructor"
            android:screenOrientation="landscape"
            android:theme="@style/AnimationActivity" />
        <activity
            android:name=".fileexplore.FileExplore"
            android:label="@string/title_activity_constructor"
            android:theme="@style/AnimationActivity" />
        <activity
            android:name=".MainMenuActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_constructor"
            android:screenOrientation="landscape"
            android:theme="@style/AnimationActivity" />
        <activity
            android:name=".SettingsActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_constructor"
            android:screenOrientation="landscape"
            android:theme="@style/AnimationActivity" />
    </application>
</manifest>